<core:FragmentDefinition
    xmlns:l="sap.ui.layout"
    xmlns:model="sap.ui.model"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
>
    <Dialog
        id="orderDialogItem"
        title="InformaciÃ³n del Pedido"
    >
        <f:SimpleForm
            id="formOrderDialogItem"
            editable="false"
            title="Pedido"
        >
            <f:content>
                <Label
                    id="labelOrder1"
                    text="{i18n>orderNum}"
                />
                <Input
                    id="inputOrderNum"
                    editable="false"
                />
                <Label
                    id="labelOrder2"
                    text="{i18n>orderDate}"
                />
                <Input
                    id="inputOrderDate"
                    editable="false"
                />
                <Label
                    id="labelOrder3"
                    text="{i18n>orderClient}"
                />
                <Input
                    id="inputOrderClient"
                    editable="false"
                />
                <Label
                    id="labelOrder4"
                    text="{i18n>orderAdress}"
                />
                <Input
                    id="inputOrderAdress"
                    editable="false"
                />
                <List
                    id="listOrderProducts"
                    headerText="{i18n>orderProducts}"
                    items="{listProduct>/orderProduct/}"
                >
                    <StandardListItem id="stdLstItemOrderProduct" title="{listProduct>orderProduct}" />
                </List>
                <Label
                    id="labelOrder7"
                    text="{i18n>orderPaymentMethod}"
                />
                <Input
                    id="inputOrderPaymentMethod"
                    editable="false"
                />
                <Label
                    id="labelOrder6"
                    text="{i18n>orderTotal}"
                />
                <Input
                    id="inputOrderTotal"
                    editable="false"
                />
                <Label
                    id="labelOrder8"
                    text="{i18n>orderStatus}"
                />
                <Input
                    id="inputOrderStatus"
                    editable="false"
                />
                <Label
                    id="labelOrder9"
                    text="{i18n>orderDetails}"
                />
                <Input
                    id="inputOrderDetailsClientPhone"
                    editable="false"
                />
                <Input
                    id="inputOrderDetailsClientEmail"
                    editable="false"
                />
                <Label
                    id="labelOrder10"
                    text="{i18n>orderExtraDetails}"
                />
                <Input
                    id="inputOrderExtraDetails"
                    editable="false"
                />
            </f:content>
        </f:SimpleForm>
    </Dialog>
</core:FragmentDefinition>
